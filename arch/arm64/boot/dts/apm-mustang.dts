/dts-v1/;

/include/ "apm-storm.dtsi"

/ {
	model = "APM X-Gene Mustang board";
	compatible = "apm,mustang", "apm,xgene-storm";

	memory {
		#address-cells = <2>;
		#size-cells = <2>;
		device_type = "memory";
		reg = <0x00 0x00000000 0x00 0x02000000>;
	};

	chosen {
		linux,stdout-path = "/soc/serial@1c020000";
	};
};

/*
 * Board-specific peripheral configurations
 */
&serial0 {
	status = "ok";
};

&menet {
	status = "ok";
};

&enet0 {
	status = "ok";
};

&enet1 {
	status = "ok";
};

&enet4 {
	status = "ok";
};

&sata2 {
	status = "ok";
};

&sata3 {
	status = "ok";
};

&sdhc0 {
	status = "ok";
};

&spi0 {
	status = "ok";

	flash: n25q256a@0 {
	status = "ok";
	cell-index = <0>;
	#address-cells = <1>;
	#size-cells = <1>;
		compatible = "n25q256a";
		reg = <0>;
		spi-max-frequency = <15000000>;
		spi-cpha;
		spi-cpol;

		partition@0x00000000 {
			label =	"Boot loader";
			reg = <0x00000000 0x01000000>;
		};
		partition@0x01000000 {
			label = "n25q256a-data";
			reg = <0x01000000 0x01000000>;
		};
	};
};

&pcie0clk {
	status = "ok";
};

&pcie0 {
	status = "ok";
};
